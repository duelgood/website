<!DOCTYPE html>
<html lang="en">
  <script>
    // Redirect Spanish speakers to Spanish version
    const userLang = navigator.language || navigator.userLanguage;
    if (userLang.startsWith('es') && !window.location.pathname.includes('/es/')) {
      const currentPath = window.location.pathname;
      const spanishPath = '/es/pages' + currentPath.replace('/pages', '');
      window.location.href = spanishPath;
    }
  </script>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DuelGood</title>
    <link rel="stylesheet" href="/static/style.css" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg" />
  </head>
  <body>
    <header>
      <div class="logo">
        <a href="/">
          <img src="/static/logo.png" alt="Duelgood Logo" />
        </a>
      </div>
      <nav>
        <input type="checkbox" id="menu-toggle" />
        <label for="menu-toggle" class="menu-icon">&#9776;</label>
        <div class="nav-links">
          <a href="/about" class="hover-underline">About</a>
          <a href="/research" class="hover-underline">Research</a>
